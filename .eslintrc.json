{
  "extends": ["airbnb", "react"],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "globals": {
    "document": true,
    "M": true
  },
  "rules": {
    "max-len": [
      1,
      80,
      2,
      {
        "ignoreUrls": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "indent": ["error", 2]
  }
}
